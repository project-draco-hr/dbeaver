{
  if (debugWriter == null) {
    File logPath=Platform.getLogFileLocation().toFile().getParentFile();
    File debugLogFile=new File(logPath,"dbeaver-debug.log");
    if (debugLogFile.exists()) {
      if (!debugLogFile.delete()) {
        System.err.println("Could not delete debug log file");
      }
    }
    try {
      debugWriter=new PrintStream(debugLogFile);
    }
 catch (    FileNotFoundException e) {
      e.printStackTrace(System.err);
    }
  }
  return debugWriter;
}
