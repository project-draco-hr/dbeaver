{
  boolean update=false;
  if (this.columns == null || this.columns.length == 0 || this.columns.length != columns.length || this.columns[0].getDataSource().getInfo().isDynamicMetadata()) {
    update=true;
  }
 else {
    for (int i=0; i < this.columns.length; i++) {
      if (!DBUtils.equalAttributes(this.columns[i].getMetaAttribute(),columns[i].getMetaAttribute())) {
        update=true;
        break;
      }
    }
  }
  if (update) {
    this.clearData();
    this.columns=columns;
    fillVisibleColumns();
  }
  return update;
}
