{
  StringBuilder decl=new StringBuilder(200);
  final String lineSeparator=ContentUtils.getDefaultLineSeparator();
  decl.append("CREATE OR REPLACE VIEW ").append(view.getFullQualifiedName()).append(lineSeparator).append("AS ").append(view.getAdditionalInfo().getDefinition());
  final MSSQLView.CheckOption checkOption=view.getAdditionalInfo().getCheckOption();
  if (checkOption != null && checkOption != MSSQLView.CheckOption.NONE) {
    decl.append(lineSeparator).append("WITH ").append(checkOption.getDefinitionName()).append(" CHECK OPTION");
  }
  return new IDatabasePersistAction[]{new AbstractDatabasePersistAction("Create view",decl.toString())};
}
