{
  final File loadFile=ContentUtils.openFile(getSite().getShell(),new String[]{"*.sql","*.txt","*.*"});
  if (loadFile == null) {
    return;
  }
  String newContent=null;
  try {
    Reader reader=new InputStreamReader(new FileInputStream(loadFile),GeneralUtils.DEFAULT_FILE_CHARSET);
    try {
      StringWriter buffer=new StringWriter();
      IOUtils.copyText(reader,buffer,10000);
      newContent=buffer.toString();
    }
  finally {
      reader.close();
    }
  }
 catch (  IOException e) {
    UIUtils.showErrorDialog(getSite().getShell(),"Can't load file","Can't load file '" + loadFile.getAbsolutePath() + "' - "+ e.getMessage());
  }
  if (newContent != null) {
    Document document=getDocument();
    if (document != null) {
      document.set(newContent);
    }
  }
}
