{
  String ddlFormatString=getEditorInput().getDatabaseObject().getDataSource().getContainer().getPreferenceStore().getString(DB2Constants.PREF_KEY_DDL_FORMAT);
  if (!CommonUtils.isEmpty(ddlFormatString)) {
    try {
      ddlFormat=DB2DDLFormat.valueOf(ddlFormatString);
    }
 catch (    IllegalArgumentException e) {
      log.error(e);
    }
  }
  return ((DB2Table)getEditorInput().getDatabaseObject()).getDDL(monitor,ddlFormat);
}
