{
  if (statusLabel.isDisposed()) {
    return;
  }
  if (error) {
    statusLabel.setForeground(colorRed);
  }
 else   if (colorRed.equals(statusLabel.getForeground())) {
    statusLabel.setForeground(filtersText.getForeground());
  }
  if (status == null) {
    status="???";
  }
  statusLabel.setText(status);
}
