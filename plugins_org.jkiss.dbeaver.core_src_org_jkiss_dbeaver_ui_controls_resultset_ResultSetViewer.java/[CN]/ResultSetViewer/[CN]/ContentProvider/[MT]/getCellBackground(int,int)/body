{
  boolean odd=row % 2 == 0;
  if (gridMode == GridMode.RECORD) {
    col=row;
    row=curRowNum;
  }
  if (model.isRowAdded(row)) {
    return backgroundAdded;
  }
  if (model.isRowDeleted(row)) {
    return backgroundDeleted;
  }
  if (model.isDirty() && model.isCellModified(new GridPos(model.getVisibleColumn(col).getAttributeIndex(),row))) {
    return backgroundModified;
  }
  if (odd && showOddRows) {
    return backgroundOdd;
  }
  return null;
}
