{
  if (CommonUtils.isEmpty(t)) {
    return t;
  }
  if (width <= 0) {
    return "";
  }
  int avgCharWidth=gc.getFontMetrics().getAverageCharWidth();
  float length=t.length();
  if (width < length * avgCharWidth) {
    length=(float)width / avgCharWidth;
    length*=1.5;
    if (length < t.length()) {
      t=t.substring(0,(int)length);
    }
  }
  return t;
}
