{
  Matcher matcher=VAR_PATTERN.matcher(string);
  int pos=0;
  while (matcher.find(pos)) {
    pos=matcher.end();
    String varName=matcher.group(2);
    Object varValue=variables.get(varName);
    if (varValue != null) {
      matcher=VAR_PATTERN.matcher(string=matcher.replaceFirst(CommonUtils.toString(varValue)));
      pos=0;
    }
  }
  return string;
}
