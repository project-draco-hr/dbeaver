{
  super.createControl(parent);
  if (valueType == Float.class || valueType == Float.TYPE || valueType == Double.class || valueType == Double.TYPE || valueType == BigDecimal.class) {
    text.addVerifyListener(UIUtils.NUMBER_VERIFY_LISTENER);
  }
 else {
    text.addVerifyListener(UIUtils.INTEGER_VERIFY_LISTENER);
  }
  return text;
}
