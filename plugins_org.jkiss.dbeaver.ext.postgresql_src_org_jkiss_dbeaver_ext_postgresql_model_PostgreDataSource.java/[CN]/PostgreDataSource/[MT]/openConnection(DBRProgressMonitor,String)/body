{
  Connection pgConnection=super.openConnection(monitor,purpose);
{
    IProduct product=Platform.getProduct();
    if (product != null) {
      String appName=DBeaverCore.getProductTitle();
      try {
        pgConnection.setClientInfo("ApplicationName",appName + " - " + purpose);
      }
 catch (      Throwable e) {
        log.debug(e);
      }
    }
  }
  return pgConnection;
}
