{
  Shell shell=filesTree.getShell();
  Point curSize=shell.getSize();
  int itemHeight=filesTree.getItemHeight();
  shell.setSize(curSize.x,Math.min((int)(DBeaverUI.getActiveWorkbenchWindow().getShell().getSize().y * 0.66),shell.computeSize(SWT.DEFAULT,SWT.DEFAULT).y) + itemHeight);
  shell.layout();
}
