{
  Composite rootComposite=null;
  for (Composite c=composite; c != null; c=c.getParent()) {
    if (c.getParent() instanceof CTabFolder) {
      ((CTabFolder)c.getParent()).setBorderVisible(false);
      rootComposite=c;
      break;
    }
  }
  if (rootComposite == null) {
    return;
  }
  DBCExecutionContext context=null;
  if (editor instanceof DBPContextProvider) {
    context=((DBPContextProvider)editor).getExecutionContext();
  }
  if (context == null) {
    rootComposite.setBackground(null);
    return;
  }
  rootComposite.setBackground(context.getDataSource().getContainer().getConnectionInfo().getColor());
}
