{
  if (_depth == 0 && super.stop(ch,position,true)) {
    return true;
  }
 else   if (ch == _opening) {
    _depth++;
  }
 else   if (ch == _closing) {
    _depth--;
    if (_depth == 0) {
      _opening=0;
      _closing=0;
    }
  }
 else   if (_depth == 0) {
    _depth=1;
  }
  return false;
}
