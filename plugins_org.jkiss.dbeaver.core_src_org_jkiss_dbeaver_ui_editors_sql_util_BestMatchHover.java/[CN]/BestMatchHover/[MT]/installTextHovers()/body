{
  instantiatedTextHovers.add(new SQLAnnotationHover(editor));
  IExtensionRegistry pluginRegistry=Platform.getExtensionRegistry();
  IExtensionPoint extensionPoint=pluginRegistry.getExtensionPoint(DBeaverConstants.PLUGIN_ID,"texthover");
  if (extensionPoint != null) {
    IExtension[] extensions=extensionPoint.getExtensions();
    for (    IExtension extension : extensions) {
      IConfigurationElement[] configElements=extension.getConfigurationElements();
      for (      IConfigurationElement configElement : configElements) {
        if (configElement.getName().equals("hover")) {
          try {
            AbstractSQLEditorTextHover h=(AbstractSQLEditorTextHover)configElement.createExecutableExtension("class");
            h.setEditor(editor);
            instantiatedTextHovers.add(h);
          }
 catch (          CoreException e) {
            log.error(e);
          }
        }
      }
    }
  }
}
