{
  try {
    out.write(STRING_QUOTE);
    char buffer[]=new char[2000];
    for (; ; ) {
      int count=reader.read(buffer);
      if (count <= 0) {
        break;
      }
      for (int i=0; i < count; i++) {
        if (buffer[i] == STRING_QUOTE) {
          out.write(escapeChar);
        }
        out.write(buffer[i]);
      }
    }
    out.write(STRING_QUOTE);
  }
  finally {
    ContentUtils.close(reader);
  }
}
