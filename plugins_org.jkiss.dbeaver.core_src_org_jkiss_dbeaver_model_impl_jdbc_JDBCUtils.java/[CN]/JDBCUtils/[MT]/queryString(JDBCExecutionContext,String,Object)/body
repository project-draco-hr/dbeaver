{
  final JDBCPreparedStatement dbStat=context.prepareStatement(sql);
  try {
    if (args != null) {
      for (int i=0; i < args.length; i++) {
        dbStat.setObject(i + 1,args[i]);
      }
    }
    JDBCResultSet resultSet=dbStat.executeQuery();
    try {
      if (resultSet.next()) {
        return resultSet.getString(1);
      }
 else {
        return null;
      }
    }
  finally {
      resultSet.close();
    }
  }
  finally {
    dbStat.close();
  }
}
