      connection.getMetaData().getTables(null,null,"UN_EXIST_DBEAVER_TBL_NAME1978",null);
      return true;
    }
 catch (    Throwable e1) {
      log.debug("Connection seems to be broken",e1);
      return false;
    }
  }
}
