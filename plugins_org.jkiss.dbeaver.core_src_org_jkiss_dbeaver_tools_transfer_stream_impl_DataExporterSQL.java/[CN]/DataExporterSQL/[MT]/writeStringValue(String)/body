{
  if (value.indexOf(STRING_QUOTE) != -1) {
    StringBuilder buf=new StringBuilder(value.length() + 5);
    for (int i=0; i < value.length(); i++) {
      char c=value.charAt(i);
      if (c == STRING_QUOTE) {
        buf.append(escapeChar);
      }
      buf.append(c);
    }
    value=buf.toString();
  }
  out.write(STRING_QUOTE);
  out.write(value);
  out.write(STRING_QUOTE);
}
