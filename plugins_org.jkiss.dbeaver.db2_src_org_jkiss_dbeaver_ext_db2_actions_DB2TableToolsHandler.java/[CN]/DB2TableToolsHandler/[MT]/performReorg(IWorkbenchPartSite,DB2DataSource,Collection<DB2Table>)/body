{
  DB2TableReorgDialog dialog=new DB2TableReorgDialog(partSite,dataSource,tables.iterator().next());
  dialog.open();
  dialog.setOnSuccess(new Runnable(){
    @Override public void run(){
      UIUtils.showMessageBox(partSite.getShell(),DB2Messages.dialog_table_tools_success_title,DB2Messages.dialog_table_tools_reorg_success,SWT.ICON_INFORMATION);
    }
  }
);
}
