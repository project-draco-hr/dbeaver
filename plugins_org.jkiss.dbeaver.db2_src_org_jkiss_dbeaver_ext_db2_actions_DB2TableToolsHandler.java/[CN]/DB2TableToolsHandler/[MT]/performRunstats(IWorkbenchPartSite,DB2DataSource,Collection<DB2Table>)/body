{
  DB2TableRunstatsDialog dialog=new DB2TableRunstatsDialog(partSite,dataSource,tables);
  dialog.setOnSuccess(new Runnable(){
    @Override public void run(){
      UIUtils.showMessageBox(partSite.getShell(),DB2Messages.dialog_table_tools_success_title,DB2Messages.dialog_table_tools_runstats_success,SWT.ICON_INFORMATION);
    }
  }
);
  dialog.open();
}
